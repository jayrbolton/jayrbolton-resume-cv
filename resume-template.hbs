<html>
  <head>
    <title>{{name}} CV/Résumé</title>
    <link href="https://fonts.googleapis.com/css?family=Public+Sans:400,400i,800,900&display=swap&subset=latin-ext" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/tachyons@4.10.0/css/tachyons.min.css"/>
    <style>
        html,
        body {
          min-height: 100%;
        }
        body, .serif {
          font-family: 'Public Sans', sans-serif;
          background: white;
        }
        main {
          background: white;
        }
        main > header h1 {
          font-size: 2.65rem;
          font-weight: 800;
        }
        h2 {
          font-size: 1.5rem;
          font-weight: 800;
        }
        ul {
          padding-left: 1.25rem;
        }
        ul li {
          margin-bottom: 0.15rem;
        }
        ul li:last-child {
          margin-bottom: 0;
        }
        h1,h2,h3,h4 {
        }
        a {
          text-decoration: none;
        }
        .dark-green {
        }
        .b--lightest-green {
          border-color: rgba(149, 193, 177, 0.2);
        }
        .f4-5 {
          font-size: 1.1rem;
        }
        .f2-5 {
            font-size: 2rem;
        }
    </style>
  </head>

  <body class="serif tl">
    <main class='mw7 pa4'>
      <header class='flex justify-between items-center pb3'>
        <div>
          <h1 class='name mv0 mt0 w-100 o-80'>{{name}}</h1>
          <div class='black-60 f4-5'>{{title}}</div>
        </div>
        <section class='contact black-70'>
          <div class='contact-phone mb1'><a href='tel:{{tel.machine}}'>{{tel.human}}</a></div>
          <div class='contact-email mb1'><a href='mailto:{{email}}'>{{email}}</a></div>
          <div class='contact-website'><a href='{{website.machine}}' target='_blank'>{{website.human}}</a></div>
        </section>
      </header>

      <section class='experience'>
        <h2 class='mb3 mt0 mb0 f2-5 black-60'>Experience</h2>

        {{#experience}}
        <div class='flex'>
          <div class='w-25 f4 b'>{{date}}</div>
          <div class='w-75'>
            <div class='flex items-center f4'>
              <span class='b'>{{title}}</span>
            </div>
            {{#desc}}
            <p class='tj black-80'>
              {{.}}
            </p>
            {{/desc}}
          </div>
        </div>
        {{/experience}}
      </section>

      <section class='education'>
        <h2 class='mb3 mt0 mb0 f2-5 black-60'>Education</h2>
        {{#education}}
        <div class='flex'>
          <div class='w-25 f4 b'>{{date}}</div>
          <div class='w-75'>
            <div class='flex items-center f4'>
              <span class='b'>{{degree}}</span>
            </div>
            <p class='tj black-80 mt1 mb0 b black-60'>
              {{school}}
            </p>
            {{#desc}}
            <p class='tj black-80'>
              {{.}}
            </p>
            {{/desc}}
          </div>
        </div>
        {{/education}}
      </section>

    </main>

  </body>
</html>

